<UserControl x:Class="CourseProj.MVVM.Views.RegisteryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseProj.MVVM.Views"             
             xmlns:uscontr="clr-namespace:CourseProj.UserControls" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="117.377"/>
            <ColumnDefinition Width="12.623"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Назад"
                FontSize="22"
                Height="40"
                Width="120"
                Grid.Column="0"
                Grid.Row="0"
                Margin="10,18,0,17"
                Command="{Binding NavigateBackCommand}"
                Style="{StaticResource buttonStyle}"/>

        <TextBlock Text="Регистрация"
                   Grid.Column="1"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="28"
                   Grid.ColumnSpan="2"
                   Style="{StaticResource textBlockStyle}"/>

        <TextBlock Text="Имя пользователя"
                   TextAlignment="Right"
                   FontSize="22"
                   Grid.Column="1"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0"
                   Style="{StaticResource textBlockStyle}"/>

        <TextBox FontSize="24"
                 Grid.Column="2"
                 Grid.Row="2"
                 Height="40"
                 Width="210"
                 Text="{Binding UserName}"
                 Style="{StaticResource textBoxStyle}" Margin="60,18,60,17"/>

        <TextBlock Text="Электронная почта"
                   TextAlignment="Right"
                   FontSize="22"
                   Grid.Column="1"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0"
                   Style="{StaticResource textBlockStyle}"/>

        <TextBlock Text="Пароль"
                   TextAlignment="Right"
                   FontSize="22"
                   Grid.Column="1"
                   Grid.Row="4"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0"
                   Style="{StaticResource textBlockStyle}"/>

        <TextBox FontSize="24"
                 Grid.Column="2"
                 Grid.Row="3"
                 Height="40"
                 Width="210"
                 Style="{StaticResource textBoxStyle}"
                 Text="{Binding Email}" Margin="60,17,60,18"/>

        <Border Grid.Row="4"
                Grid.Column="2"
                BorderThickness="0.3"
                BorderBrush="Black"
                Width="210"
                Height="40">
            <uscontr:BindableWatermarkPasswordBox x:Name="PasswordTextBox"
                                              Width="210"
                                              Height="40"
                                              FontSize="24"
                                              BorderThickness="1"
                                              Foreground="Indigo"
                                         Password="{Binding Password}"/>
        </Border>

        <TextBlock Text="Повторите пароль"
                   TextAlignment="Right"
                   FontSize="22"
                   Grid.Column="1"
                   Grid.Row="5"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0"
                   Style="{StaticResource textBlockStyle}"/>

        <Border Grid.Row="5"
                Grid.Column="2"
                BorderThickness="0.3"
                BorderBrush="Black"
                Width="210"
                Height="40">
            <uscontr:BindableWatermarkPasswordBox x:Name="ConfirmPasswordTextBox"
                                              Width="210"
                                              Height="40"
                                              FontSize="24"
                                              BorderThickness="1"
                                              Foreground="Indigo"
                                         Password="{Binding ConfirmPassword}"/>
        </Border>
        
        <Button Content="Зарегистрироваться"
                FontSize="22"
                Height="40"
                Width="240"
                Grid.Column="1"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Command="{Binding RegisterUserCommand}"
                Style="{StaticResource buttonStyle}" Margin="210,18,210,17"/>

    </Grid>
</UserControl>
