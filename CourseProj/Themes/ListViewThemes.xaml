<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CourseProj.Themes">
    <ControlTemplate x:Key="JewelryItemsListViewTemplate"
                     TargetType="ListViewItem">
        <Border Name="Border"
                BorderBrush="Indigo"
                BorderThickness="1"
                Padding="10"
                HorizontalAlignment="Stretch"
                Background="LavenderBlush"
                Height="200">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0"
                       Grid.RowSpan="3"
                       Grid.Column="0"
                       Width="200"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="0,0,5,0"
                       Stretch="Fill"
                       Source="{Binding Image}"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Grid.Column="1"
                           Grid.Row="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="16"
                           Text="{Binding Path=JewelryName}"/>

                <TextBlock Grid.Row="1"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Path=Description}"/>

                <TextBlock Grid.Row="2" Grid.Column="2" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" 
                           FontSize="16" 
                           Text="{Binding StringFormat={}{0} руб, Path=Price}"/>

            </Grid>
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" 
                              Command="{Binding DataContext.NavigateToItemInfoCommand, 
                                        RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                              CommandParameter="{Binding}"/>
            </Border.InputBindings>
        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter TargetName="Border" Property="BorderThickness" Value="3"/>
                <Setter TargetName="Border" Property="Background" Value="DarkOrchid"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="Background" Value="DarkOrchid"/>
            </Trigger>
        </ControlTemplate.Triggers>

    </ControlTemplate>


