<UserControl x:Class="CourseProj.UserControls.PasswordTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseProj.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="210" Loaded="PasswordTextBox_OnLoaded">
    <Grid>
        <TextBox x:Name="WMTextBox" 
                 BorderThickness="0" 
                 FontSize="14" 
                 TextChanged="TextBox_TextChanged"/>
        <TextBlock x:Name="WatermarkTextBlock" FontWeight="Light" Margin="3,0,0,0" Background="#F7FFF3" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>

    </Grid>
</UserControl>
